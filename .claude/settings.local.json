{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .specify/scripts/state.js query --all 2>/dev/null || echo \"[SSD State] Not initialized. Run: node .specify/scripts/state.js init\""
          }
        ]
      }
    ]
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Edit",
      "MultiEdit",
      "Bash(npm run lint)",
      "Bash(npm run test:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git rev-parse:*)",
      "Bash(tree:*)",
      "Bash(claude mcp add:*)",
      "mcp__serena__activate_project",
      "mcp__serena__check_onboarding_performed",
      "mcp__serena__list_dir",
      "Bash(mkdir:*)",
      "Bash(git push:*)",
      "Bash(node:*)",
      "Bash(ls -la \"C:\\Users\\萓谷篤嗣\\Desktop\\ssd-template\\.github\"\" 2>/dev/null || echo \"No .github directory \")",
      "Bash(echo:*)",
      "Bash(gh repo view:*)",
      "Bash(gh repo edit:*)",
      "Bash(git remote add:*)",
      "Bash(git branch:*)"
    ]
  },
  "enabledMcpjsonServers": [
    "serena"
  ],
  "enableAllProjectMcpServers": true,
  "outputStyle": "default"
}
